{
  "name": "task-management-service",
  "version": "1.0.0",
  "description": "Task Management Service built with Bun.js, Elysia.js and DDD",
  "type": "module",
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "bun run dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run src/infrastructure/database/migrate.ts"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "elysia": "^1.1.24",
    "@elysiajs/cors": "^1.1.3",
    "@elysiajs/swagger": "^1.1.4",
    "drizzle-orm": "^0.33.0",
    "postgres": "^3.4.4",
    "redis": "^4.7.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.24.0",
    "typescript": "^5.6.3"
  }
}

